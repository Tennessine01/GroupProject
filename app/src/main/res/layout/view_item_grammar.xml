<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/view_Ten"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="#fafafa"
        android:textSize="30dp"
        android:textColor="#C60385"
        android:layout_height="wrap_content"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:textColor="#0064FA"
                android:layout_height="wrap_content"
                android:text="1.Câu Khẳng định: "
                android:textSize="20dp" />
            <TextView
                android:id="@+id/view_CauKD"
                android:layout_width="match_parent"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:text="Hiện câu khẳng định "
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="#0064FA"
                android:layout_height="wrap_content"
                android:text="2.Câu Phủ định: "
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/view_CauPD"
                android:layout_width="match_parent"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:text="Hiện câu phủ định "
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="#0064FA"
                android:layout_height="wrap_content"
                android:text="3.Câu Nghi Vấn: "
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/view_CauNV"
                android:layout_width="match_parent"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:text="Hiện Câu Nghi Vấn "
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="#0064FA"
                android:layout_height="wrap_content"
                android:text="4.Cách dùng: "
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/view_CachDung"
                android:layout_width="match_parent"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:text="Hiện cách dùng "
                android:textColor="@color/black"
                android:textSize="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:textColor="#0064FA"
                android:layout_height="wrap_content"
                android:text="5.Chú Ý: "
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/view_ChuY"
                android:layout_width="match_parent"
                android:textStyle="normal"
                android:layout_height="wrap_content"
                android:text="Hiện chú ý "
                android:textColor="@color/black"
                android:textSize="15dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>